<body>
<!-- Header -->
<%- include("../includes/header") %> 
<!-- Fin del Header -->
  <!-- Main -->
      <main>
  <!-- Section -->
  <nav id="categorias">
    <a href="/productos/fresca">Frescas</a>
    <a href="/productos/liviana">Livianas</a>
    <a href="/productos/pesada">Pesadas</a>
  </nav>
<section class="productos">
  <h3 class="titulares">¡No llegues a esa ocasión especial sin una SUPER TORTA!</h3>

  <% products.forEach(producto => { %>
    <article>
            <figure><img src="<%= producto.imagen%>" alt=""></figure>
            <section>
              <h3 class="descripciones"> <%= producto.name %></h3>
              <p class="precios"> $<%= producto.precio %></p>
              <a href='/productos/detalle/<%= producto.id %>'  class="botonproductos">Ver más info</a>
            </section>
    </article>        
  <% }) %> 

</section>
      </main>
  <!-- Footer -->
<%- include("../includes/footer") %> 
</body>