<body>
<!-- Header -->
<%- include("../includes/header") %> 
<!-- Fin del Header -->
  <!-- Main -->
  <main>
  <!-- Section -->
    <nav class= "navproducto">
    <a href="/">Home</a>
    <a href="/productos">/ Productos</a>
    <a href="/productos/detail">/<%= producto.name %></a>
  </nav>
  <section id="productdetail">
    <figure id= "fotoproducto">	
      <img src="/<%= producto.imagen%>" alt="">
    </figure>
    <article>
      <h3><%= producto.name %></h3>
      <p>
        <i class="fas fa-dollar-sign"></i>
        <%= producto.precio %>
      </p>
      <p>
        <i class="fas fa-credit-card"></i>
        Pagá hasta en 18 cuotas 
      </p>

      <form action="/carrito" method="POST">
        
        <fieldset>
          <label>Cantidad</label>
          <input type="number" name="cantidad" required>
        </fieldset>
        <fieldset>
          <button type="submit">
            Agregar al carrito
          </button>
        </fieldset>
      </form>
      <p>
        <%= producto.descripcion %>
      </p>
      <form action= "/productos/eliminar/<%= producto.id %>?_method=DELETE" method="POST">
        <fieldset>
          <button type= "submit">
            ELIMINAR
          </button>
        </fieldset>
      </form>
      <form action= "/productos/editar/<%= producto.id %>" method="GET">
      
        <fieldset>
          <button type= "submit">
            EDITAR
          </button>
        </fieldset>
      </form>

    </article>
  </section>

  <section class="productos">
    <h3 class="titulares">Productos relacionados</h3>
