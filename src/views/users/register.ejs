<main>
<!-- Formularios -->

<form action="/user/register" method="POST" class="formularioRegistro" enctype="multipart/form-data">
  <div class="controlFormulario">
      <input class="control" type="text" name="nombre" placeholder="Nombre y Apellido" required minlength="5" value="<%= locals.oldData ? oldData.nombre : null %>">
