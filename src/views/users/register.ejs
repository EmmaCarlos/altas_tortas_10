            <p> <%= errors.nombre.msg %>   </p>
        <% } %>
  </div>
  <div class="controlFormulario">
      <input class="control" type="text" name="nombreUsuario" placeholder="Nombre de usuario" required value="<%= locals.oldData ? oldData.nombreUsuario : null %>">
      <% if (locals.errors && errors.nombreUsuario) {%>
        <p> <%= errors.nombreUsuario.msg %>   </p>
    <% } %>
    </div>
  <div class="controlFormulario">
      <input class="control" type="email" name="E-mail" placeholder="E-mail" required minlength="7" value="<%= locals.oldData ? oldData.E-mail : null %>">
      <% if (locals.errors && errors.E-mail) {%>
        <p> <%= errors.E-mail.msg %>   </p>
    <% } %>
    </div>
